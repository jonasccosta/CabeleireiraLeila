<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/inferiorMarginStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/starcopy" />

    <ImageView
        android:id="@+id/superiorMarginStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/inferiorMarginStars"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/superiorMarginStars">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/hair1"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo10" />

            <ImageView
                android:id="@+id/hair2"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo2" />

            <ImageView
                android:id="@+id/hair3"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo1" />

            <ImageView
                android:id="@+id/hair4"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo6" />

            <ImageView
                android:id="@+id/hair5"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo3" />

            <ImageView
                android:id="@+id/hair6"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo4" />

            <ImageView
                android:id="@+id/hair7"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo9" />

            <ImageView
                android:id="@+id/hair8"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo5" />

            <ImageView
                android:id="@+id/hair9"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo7" />

            <ImageView
                android:id="@+id/hair10"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/cabelo8" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>